---
interface Props {
  name: string;
  company: string;
  quote: string;
  videoUrl?: string;
}

const { name, company, quote, videoUrl } = Astro.props;
---

<div class="testimonial">
  {videoUrl && (
    <div class="testimonial__video">
      <div class="testimonial__placeholder">Video coming soon</div>
    </div>
  )}
  <blockquote class="testimonial__quote">{quote}</blockquote>
  <p class="testimonial__author">
    <strong>{name}</strong> &mdash; {company}
  </p>
</div>

<style>
  .testimonial {
    background-color: var(--color-white);
    border-radius: 12px;
    padding: 32px;
    border: 1px solid rgba(0, 28, 2, 0.08);
  }

  .testimonial__video {
    margin-bottom: 20px;
  }

  .testimonial__placeholder {
    background-color: var(--color-light-cream);
    border-radius: 8px;
    padding: 48px;
    text-align: center;
    font-size: 0.9rem;
    color: var(--color-black);
    opacity: 0.5;
  }

  .testimonial__quote {
    font-size: 1.05rem;
    line-height: 1.6;
    font-style: italic;
    margin-bottom: 16px;
    color: var(--color-black);
  }

  .testimonial__author {
    font-size: 0.9rem;
    color: var(--color-black);
    opacity: 0.7;
  }
</style>
