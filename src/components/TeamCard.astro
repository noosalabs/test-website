---
interface Props {
  name: string;
  role: string;
  country: string;
  photo?: string;
  linkedin?: string;
  github?: string;
}

const { name, role, country, photo, linkedin, github } = Astro.props;
---

<div class="team-card">
  <div class="team-card__photo">
    {photo ? (
      <img src={photo} alt={name} />
    ) : (
      <div class="team-card__avatar">{name.split(' ').map(n => n[0]).join('')}</div>
    )}
  </div>
  <h3 class="team-card__name">{name}</h3>
  <p class="team-card__role">{role}</p>
  <p class="team-card__country">{country}</p>
  {(linkedin || github) && (
    <div class="team-card__links">
      {linkedin && <a href={linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>}
      {github && <a href={github} target="_blank" rel="noopener noreferrer">GitHub</a>}
    </div>
  )}
</div>

<style>
  .team-card {
    text-align: center;
  }

  .team-card__photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto 16px;
  }

  .team-card__photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-card__avatar {
    width: 100%;
    height: 100%;
    background-color: var(--color-primary-green);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 800;
  }

  .team-card__name {
    font-size: 1.05rem;
    margin-bottom: 4px;
  }

  .team-card__role {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-bottom: 2px;
  }

  .team-card__country {
    font-size: 0.85rem;
    opacity: 0.5;
    margin-bottom: 8px;
  }

  .team-card__links {
    display: flex;
    gap: 12px;
    justify-content: center;
  }

  .team-card__links a {
    font-size: 0.85rem;
    color: var(--color-primary-green);
    font-weight: 800;
    transition: opacity 0.2s;
  }

  .team-card__links a:hover {
    opacity: 0.7;
  }
</style>
